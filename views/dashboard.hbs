<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>List of WishListed games</p>
{{#if games}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Box Art</th>
            </tr>
        </thead>
        <tbody>
            {{#each games}}
            <tr>
                
                <td><a href="https://www.google.com/search?&q={{title}}" target="_blank" rel="noopener noreferrer">{{title}}</a></td>
                <td><a href="/games/{{_id}}"></a>{{genre}}</td>
                <td><a href="/games/{{_id}}"></a>{{formatDate releaseDate 'Do MMMM YYYY'}}</td>
                <td><a href="/games/{{_id}}"></a><img src="{{image}}"></td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>
                    <a href="/games/edit/{{_id}}" class="btn btn-float">
                        <i class ="fas fa-edit"></i>
                    </a>
                    <form action="/games/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>

                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not WishListed anything yet!</p>
{{/if}}